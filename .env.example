# Gemini (backend only)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Backend server
PORT=4000

# Firebase (backend: Firestore + Auth)
# Option A: Service account key fields (private key: use escaped newlines or single line)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
# Option B: Path to service account JSON file (alternative to above)
# GOOGLE_APPLICATION_CREDENTIALS=./path/to/serviceAccountKey.json

# Deprecated: admin auth and templates now use Firebase Auth and Firestore
# ADMIN_SECRET=
# DATABASE_PATH=./data/templates.json

# Frontend API base URL (used by Vite)
VITE_API_URL=http://localhost:4000

# Admin panel: Firebase JS SDK config (for client-side sign-in)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_APP_ID=

# WhatsApp webhook (optional; for future integration)
# WHATSAPP_VERIFY_TOKEN=
# WHATSAPP_ACCESS_TOKEN=
